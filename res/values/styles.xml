<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

    </style>

    <style name="table_entries">
        <item name="android:padding">5sp</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="title" parent="AppBaseTheme">
		<item name="android:background">#22b573</item>
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:padding">10dp</item>
    </style>
    
    <style name="splashTitle" parent="AppBaseTheme">
		<item name="android:textColor">#22b573</item>
		<item name="android:textSize">45sp</item>
    </style>


    <style name="ButtonStyle">
        <item name="android:padding">15dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/lightbutton</item>
    </style>
    <style name="ButtonStyle.Dark">
        <item name="android:padding">15dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/darkbutton</item>
    </style>

    <style name="ListViewStyle">
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:dividerHeight">10.0sp</item>
        <item name="android:divider">@android:color/transparent</item>
    </style>
    <style name="ListViewItemStyle">
        <item name="android:background">@drawable/list_item1</item>
        <item name="android:padding">15dp</item>
    </style>
    <style name="TextSmaller">
        <item name="android:textSize">17sp</item>
    </style>
    <style name="TextSmall">
        <item name="android:textSize">21sp</item>
    </style>
    <style name="TextMedium">
        <item name="android:textSize">28sp</item>
    </style>
    <style name="TextLarge">
        <item name="android:textSize">36sp</item>
    </style>
    
</resources>
