<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="40dp">



        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:id="@+id/add_loanable_identifier"
                style="@style/TextMedium"
                android:text="@string/add_loanable_doelibs_identifier"/>

        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/TextSmall"
                android:layout_marginBottom="15dp"
                android:id="@+id/txt_doelibs_identifier"/>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/add_loanable_category"
                android:layout_marginBottom="5dp"
                style="@style/TextMedium"
                android:text="@string/add_loanable_location_category"/>

        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/TextSmall"
                android:layout_marginBottom="15dp"
                android:id="@+id/txt_location_category"/>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/add_loanable_room"
                android:layout_marginBottom="5dp"
                style="@style/TextMedium"
                android:text="@string/add_loanable_room"/>

        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/TextSmall"
                android:layout_marginBottom="15dp"
                android:id="@+id/txt_room"/>

        <Button
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:id="@+id/btn_add_loanable"
                android:onClick="onSave"/>

</LinearLayout>