<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#e5e5e5"
    tools:context="se.hj.doelibs.mobile.MyLoansListFragment" >


    <TextView
            android:id="@+id/myLoanText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/my_loans_MyLoans"
        style="@style/TextMedium"
        android:gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:background="#22b573"
        android:padding="10dp"
            />

    <ListView
            android:id="@+id/loans_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            style="@style/ListViewStyle"
            />

    <TextView
            android:id="@+id/myReservationsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/my_loans_MyReservations"
            style="@style/TextMedium"
            android:gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:background="#22b573"
            android:padding="10dp"
            />
    <ListView
            android:id="@+id/reservations_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            style="@style/ListViewStyle"
            />

</LinearLayout>
